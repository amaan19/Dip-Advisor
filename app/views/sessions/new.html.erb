<div class="login-page">
 <% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error_text| %>
      <li>
        <%= error_text %>
      </li>
    <% end %>
 <% end %>
<h1>Login</h1>
  <div class="signup-box">
    <%= form_for @user, url: sessions_path, method: :post do |f| %>
    <br>
    <br>
    <%= f.label :username %>
    <br>
    <%= f.text_field :username %>
    <br>
    <%= f.label :password %> 
     <br>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit 'Login' %>
<% end %>

  </div>
</div>
